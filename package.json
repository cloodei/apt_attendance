{
  "name": "apt_attendance",
  "scripts": {
    "dev": "concurrently \"bun run frontend\" \"bun run backend\"",
    "start": "concurrently \"bun run start:frontend\" \"bun run start:backend\"",
    "down": "bun install && bun run install:frontend && bun run install:backend",
    "install:frontend": "cd frontend && bun install",
    "install:backend": "cd backend && uv sync",
    "frontend": "cd frontend && bun run dev",
    "backend": "cd backend && bun run dev",
    "start:frontend": "cd frontend && bun run start",
    "start:backend": "cd backend && bun run start"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
